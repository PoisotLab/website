@import url("https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,200;0,300;0,400;0,600;0,800;1,200;1,300;1,400;1,600;1,800&display=swap");
* {
  font-family: 'Public Sans', sans-serif;
  font-weight: 400; }

b, strong {
  font-weight: 600; }

em, i {
  font-weight: inherit; }

* {
  box-sizing: border-box; }

html {
  line-height: 1.15;
  /* 1 */
  -webkit-text-size-adjust: 100%;
  /* 2 */ }

html, body {
  margin: 0 0;
  padding: 0 0;
  width: 100vw;
  max-width: 100%;
  overflow-x: hidden;
  min-height: 100vh; }

html {
  background-image: url("/backgrounds/18.jpg");
  background-attachment: fixed;
  background-position: center center;
  background-size: cover;
  background-repeat: no-repeat; }

nav#topbar {
  text-transform: uppercase;
  overflow: hidden;
  position: fixed;
  top: 0;
  line-height: 60px;
  font-size: 80%;
  width: 100vw; }
  nav#topbar.scrolled {
    box-shadow: 0px 0px 4px 0px #555;
    background-color: white;
    transition: 0.8s;
    z-index: 100; }
    nav#topbar.scrolled a {
      color: black; }
      nav#topbar.scrolled a b {
        color: #114f54;
        font-weight: 400; }
    nav#topbar.scrolled nav#menu a.menu {
      color: #444; }
  nav#topbar a {
    color: white;
    text-decoration: none;
    display: block;
    padding: 10px; }
    nav#topbar a img.logo {
      margin: -10px 0px;
      height: 40px; }
    nav#topbar a.icon {
      opacity: 0.5;
      display: block;
      position: fixed;
      right: 0;
      top: 0; }
    nav#topbar a.menu {
      background-color: white;
      color: #444;
      font-weight: 400; }
      nav#topbar a.menu:nth-child(odd) {
        background-color: #f8f8f8; }
      nav#topbar a.menu:nth-child(even) {
        background-color: #f3f3f3; }
      nav#topbar a.menu:hover {
        background-color: #eee !important;
        color: #000; }
      nav#topbar a.menu.active {
        color: #000;
        font-weight: 600; }
  nav#topbar nav#menu {
    display: none; }

header {
  line-height: 3em;
  color: white;
  font-weight: 600;
  padding-top: 80px;
  position: relative;
  top: 0;
  z-index: -1;
  font-size: 1.3rem; }

main#content {
  background-color: #fdfdfd;
  padding-bottom: 5em; }

section.container {
  padding: 1.75em;
  width: 100vw;
  line-height: 1.4; }
  section.container ul, section.container li {
    list-style: none; }

#homepage footer {
  display: none; }

#splash {
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1000; }
  #splash section {
    display: block;
    position: fixed;
    left: 50%;
    bottom: 0;
    transform: translate(-50%, 0);
    margin: 0 auto;
    background-color: #1d8265;
    color: white;
    width: 100vw;
    text-align: center;
    padding: 3.5em;
    font-size: 1.1rem; }
    #splash section div {
      margin: 0px auto;
      display: block;
      text-align: left;
      max-width: 750px; }
    #splash section h1 {
      font-weight: 300;
      font-size: 1.8rem;
      text-transform: uppercase; }

.backdrop {
  width: 100vw;
  height: 100vw;
  background-color: rgba(13, 59, 63, 0.05);
  background-blend-mode: hue;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -2; }

.container a {
  color: #114f54;
  text-decoration: none;
  border-bottom: 1px solid #eee; }
  .container a:hover {
    color: #096e76; }

.listing {
  text-align: center;
  margin-top: 5em;
  margin-bottom: 5em; }

.item {
  display: inline-block;
  padding: 1.2em;
  margin-bottom: 5em;
  max-width: 300px;
  vertical-align: top; }
  .item a {
    background-color: #114f54;
    color: white;
    font-weight: 800;
    vertical-align: bottom;
    padding: 0.8em;
    border-radius: 1.2em; }
    .item a:hover {
      color: white;
      background-color: #096e76; }
  .item h2 {
    font-weight: 300;
    font-size: 120%;
    font-variant: small-caps;
    color: black;
    padding-top: 1em;
    margin-bottom: 0em;
    height: 5em;
    text-align: center; }
  .item img.header {
    width: 160px;
    height: 160px;
    border-radius: 80px;
    border: 2px solid #096e76;
    text-align: center;
    margin: 0px auto;
    display: block; }
  .item .summary {
    color: #555;
    font-weight: 400;
    height: 12.5em; }

@media only screen and (min-width: 768px) {
  .container {
    max-width: 1000px;
    margin: 0px auto; }
    .container p {
      line-height: 1.8; }
  .item .summary {
    height: 17em;
    line-height: 1.8; }
  header {
    padding-top: 180px;
    transition: 0.5s; }
    header .container {
      font-size: 140%; }
  nav#topbar a {
    display: inline-block; }
  nav#topbar a.icon {
    display: none; }
  nav#topbar nav#menu {
    position: fixed;
    right: 0;
    top: 0;
    display: inline-block; }
    nav#topbar nav#menu a.menu {
      display: inline-block;
      background: none !important;
      color: white; } }

.paper {
  margin-bottom: 1.7em; }
  .paper .title {
    font-weight: 600; }
    .paper .title .year {
      color: #777; }
      .paper .title .year::before {
        content: "("; }
      .paper .title .year::after {
        content: ")"; }
  .paper .authors {
    font-weight: 300; }
  .paper .metadata {
    padding-top: 0.7em; }
  .paper .badge a {
    border: 1px solid #114f54;
    color: #114f54;
    font-size: 80%;
    padding: 0.2em 0.4em;
    text-transform: uppercase;
    border-radius: 4px; }
    .paper .badge a:hover {
      color: white;
      background-color: #096e76; }

.mugshot {
  filter: grayscale(70%); }

.item:hover .mugshot {
  filter: grayscale(0%); }

.item .summary span {
  display: inline-block; }
  .item .summary span a {
    display: inline;
    color: #114f54;
    background: none;
    padding: 0 0;
    border-radius: 0;
    font-weight: inherit; }
    .item .summary span a:hover {
      color: #096e76; }

.item .social a {
  color: #114f54;
  background: none !important;
  border-bottom: none; }

footer {
  padding-top: 4em;
  background-color: #f3f3f3;
  color: #aeaeae;
  font-weight: 300; }

#content ul, #content li {
  list-style-type: circle;
  line-height: 150%; }

#content li {
  margin-bottom: 1em; }

.person h2 {
  margin-bottom: -2em; }

.person .social {
  margin-bottom: 1.2em;
  height: 0.5em; }
